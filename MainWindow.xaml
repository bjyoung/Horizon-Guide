<Window x:Class="Horizontal_Guide.MainWindow"
        x:Name="FirstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Horizontal_Guide" 
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Horizon Guide" Height="450" Width="800" 
        WindowState="Maximized" SizeToContent="Manual"
        AllowsTransparency="True" WindowStyle="None">

    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>

    <Window.Resources>
        <Image x:Key="Show" Source="data/show_line_button_icon.png"/>
        <Image x:Key="Hide" Source="data/hide_line_button_icon.png"/>
    </Window.Resources>

    <Canvas Height="Auto" Width="Auto">

        <Slider x:Name="line_height_slider" 
            Width="25" Height="1080" 
            RenderTransformOrigin="0.5,0.5"  
            Cursor="Arrow"
            ValueChanged="line_height_slider_ValueChanged" 
            Orientation="Vertical" Value="5"
            Loaded="line_height_slider_OnLoad" Panel.ZIndex="1"/>

        <Line
            x:Name="horizon_guide"
            X1="0" Y1="{Binding ElementName=line_height_slider, Path=ActualHeight}"
            X2="1920" Y2="{Binding ElementName=line_height_slider, Path=ActualHeight}"
            Stroke="White"
            StrokeThickness="4" 
            Loaded="horizon_guide_OnLoad"/>

        <Button x:Name="line_visibility_button" 
                Width="50" Height="50"
                Canvas.Right="150" Canvas.Top="20"
                Click="line_visibility_button_OnClick">
            <DynamicResource ResourceKey="Show"/>
        </Button>

        <xctk:ColorPicker x:Name="LineColorPicker"
                Width="50" Height="50"
                SelectedColorChanged="LineColorPicker_ColorChanged"
                Canvas.Right="50" Canvas.Top="20" Cursor="Arrow"/>

    </Canvas>
</Window>
